<div id="header_nav">

<div class="container">

  <div class="main-content_profile">

    <div class="users_name">
        <h1><%= current_user.profile.first_name || "First Name" %> <%= current_user.profile.last_name || "Last Name" %></h1>
    </div>

    <br>
    <br>

    <div class="row" id="to_hide">
      <div class="col-xs-12 col-md-12 col-lg-12 col-xl-12 profile_image">
        <%= image_tag((current_user.profile.image || "http://placehold.it/200x200"), width: "200px", height:"200px", class: "profile_pic") %>
      </div>
      <div class="col-xs-12 col-md-12 col-lg-12 col-xl-12 profile_data">
        Graduation Date:<%= @profile.expected_graduation %>
        City: <%= @profile.city %>
        State: <%= @profile.state %>
        <a href="#edit" data-toggle="modal">Edit</a>
      </div>
    </div>
  </div>

</div>

</div>






<div class="modal fade" id="edit" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
          <%= render 'profiles/edit' %>
      </div>
      <div class="modal-footer">
          <a class="btn btn-default" data-dismiss="modal">Close</a>
      </div>
    </div>
  </div>
</div>


